; Posy's Cursor Black
; michieldb.nl

[Version]
signature="$CHICAGO$"

[DefaultInstall]
CopyFiles = Scheme.Cur, Scheme.Txt
AddReg    = Scheme.Reg

[DestinationDirs]
Scheme.Cur = 10,"%CUR_DIR%"
Scheme.Txt = 10,"%CUR_DIR%"

[Scheme.Reg]
HKCU,"Control Panel\Cursors\Schemes","%SCHEME_NAME%",,"%10%\%CUR_DIR%\%pointer%,%10%\%CUR_DIR%\%help%,%10%\%CUR_DIR%\%work%,%10%\%CUR_DIR%\%busy%,%10%\%CUR_DIR%\%cross%,%10%\%CUR_DIR%\%Text%,%10%\%CUR_DIR%\%Hand%,%10%\%CUR_DIR%\%unavailiable%,%10%\%CUR_DIR%\%Vert%,%10%\%CUR_DIR%\%Horz%,%10%\%CUR_DIR%\%Dgn1%,%10%\%CUR_DIR%\%Dgn2%,%10%\%CUR_DIR%\%move%,%10%\%CUR_DIR%\%alternate%,%10%\%CUR_DIR%\%link%"

[Scheme.Cur]
Posy Black default.cur
Posy Black help.cur
Posy Black background max 96.ani
Posy wait max 96.ani
Posy beam.cur
Posy forbidden.cur
Posy Black size NS.cur
Posy Black size EW.cur
Posy Black size NwSe.cur
Posy Black size NeSw.cur
Posy move.cur
Posy hand.cur
Posy precise.cur
Posy Black pen.cur
Posy alt.cur

[Scheme.Txt]

[Strings]
CUR_DIR       = "Cursors\Posys Cursor Black"
SCHEME_NAME   = "Posy's Cursor Black"
pointer       = "Posy Black default.cur"
help          = "Posy Black help.cur"
work          = "Posy Black background max 96.ani"
busy          = "Posy wait max 96.ani"
text          = "Posy beam.cur"
unavailiable  = "Posy forbidden.cur"
vert          = "Posy Black size NS.cur"
horz          = "Posy Black size EW.cur"
dgn1          = "Posy Black size NwSe.cur"
dgn2          = "Posy Black size NeSw.cur"
move          = "Posy move.cur"
link          = "Posy hand.cur"
cross         = "Posy precise.cur"
hand          = "Posy Black pen.cur"
alternate     = "Posy alt.cur"